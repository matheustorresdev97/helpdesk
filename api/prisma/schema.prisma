generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  OPEN
  PROCESSING
  CLOSED
}

enum ServiceStatus {
  ACTIVE
  INACTIVE
}

enum Role {
  ADMIN
  CLIENT
  TECHNICIAN
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String

  role       Role
  admin      Admin?
  client     Client?
  technician Technician?

  @@map("users")
}

model Admin {
  id     String @id @default(uuid())
  userId String @unique

  user User @relation(fields: [userId], references: [id])

  @@map("admins")
}

model Client {
  id           String @id @default(uuid())
  userId       String @unique
  profilePhoto String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user    User     @relation(fields: [userId], references: [id])
  tickets Ticket[]

  @@map("clients")
}

model Technician {
  id           String @id @default(uuid())
  userId       String @unique
  profilePhoto String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id])
  tickets      Ticket[]
  availability Availability?

  @@map("technicians")
}

model Availability {
  id           String   @id @default(uuid())
  technicianId String   @unique
  startTime    DateTime
  endTime      DateTime

  technician Technician @relation(fields: [technicianId], references: [id])

  @@map("availabilities")
}

model Ticket {
  id           String  @id @default(uuid())
  title        String
  description  String
  clientId     String
  technicianId String
  initialCost  Decimal @default(200.00)

  services Service[] @relation("TicketServices", map: "ticket_services")

  status     TicketStatus @default(OPEN)
  client     Client       @relation(fields: [clientId], references: [id])
  technician Technician   @relation(fields: [technicianId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tickets")
}

model Service {
  id     String        @id @default(uuid())
  title  String
  value  Decimal
  status ServiceStatus @default(ACTIVE)

  tickets Ticket[] @relation("TicketServices", map: "ticket_services")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("services")
}
